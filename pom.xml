<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>sk.baka.webvm</groupId>
    <artifactId>webvm</artifactId>
    <packaging>war</packaging>
    <version>0.2-SNAPSHOT</version>
    <name>WebVM</name>
    <description>WebVM: A Java Virtual Machine analyzer with Web interface. Ideal for watching out for your
        Tomcat or J2EE server installations. You can even embed it into your EAR.
    </description>
	<url>http://kenai.com/projects/webvm</url>
    <organization>
        <name>Baka</name>
        <url>http://www.baka.sk/</url>
    </organization>
    <licenses>
        <license>
            <name>GPL 3.0</name>
            <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
	<scm>
		<connection>scm:hg:https://kenai.com/hg/webvm~sources</connection>
		<url>http://kenai.com/projects/webvm/sources/sources/show</url>
	</scm>
	<issueManagement>
		<system>JIRA</system>
		<url>http://kenai.com/jira/browse/WEBVM</url>
	</issueManagement>
	<mailingLists>
		<mailingList>
			<name>Commits</name>
			<subscribe>sympa@webvm.kenai.com?subject=subscribe%20commits</subscribe>
			<unsubscribe>sympa@webvm.kenai.com?subject=unsubscribe%20commits</unsubscribe>
			<post>commits@webvm.kenai.com</post>
			<archive>http://kenai.com/projects/webvm/lists/commits/archive</archive>
		</mailingList>
		<mailingList>
			<name>Dev</name>
			<subscribe>sympa@webvm.kenai.com?subject=subscribe%20dev</subscribe>
			<unsubscribe>sympa@webvm.kenai.com?subject=unsubscribe%20dev</unsubscribe>
			<post>dev@webvm.kenai.com</post>
			<archive>http://kenai.com/projects/webvm/lists/dev/archive</archive>
		</mailingList>
		<mailingList>
			<name>Issues</name>
			<subscribe>sympa@webvm.kenai.com?subject=subscribe%20issues</subscribe>
			<unsubscribe>sympa@webvm.kenai.com?subject=unsubscribe%20issues</unsubscribe>
			<post>issues@webvm.kenai.com</post>
			<archive>http://kenai.com/projects/webvm/lists/issues/archive</archive>
		</mailingList>
		<mailingList>
			<name>Users</name>
			<subscribe>sympa@webvm.kenai.com?subject=subscribe%20users</subscribe>
			<unsubscribe>sympa@webvm.kenai.com?subject=unsubscribe%20users</unsubscribe>
			<post>users@webvm.kenai.com</post>
			<archive>http://kenai.com/projects/webvm/lists/users/archive</archive>
		</mailingList>
	</mailingLists>
    <developers>
        <developer>
            <id>mvy</id>
            <name>Martin Vysny</name>
            <email>vysny@baka.sk</email>
            <timezone>1</timezone>
            <roles><role>developer</role></roles>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket</artifactId>
            <version>${wicket.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
            <version>1.4.2</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <optimise>true</optimise>
                    <debug>true</debug>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
				<configuration>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<preparationGoals>clean install</preparationGoals>
					<goals>clean install</goals>
					<username>${kenai.username}</username>
					<password>${kenai.password}</password>
				</configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <wicket.version>1.4-rc2</wicket.version>
        <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    </properties>
</project>
